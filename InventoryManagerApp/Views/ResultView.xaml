<UserControl x:Class="InventoryManagerApp.Views.ResultView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InventoryManagerApp.Views"
             xmlns:vm="clr-namespace:InventoryManagerApp.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="725"
             d:DataContext="{d:DesignInstance vm:ResultViewModel, IsDesignTimeCreatable=True}"
             KeyDown="UserControl_KeyDown">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="ColumnHeaderStyle1" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}" TargetType="{x:Type DataGridColumnHeader}">
                <Setter Property="Background" Value="White" />
                <Setter Property="BorderBrush" Value="LightGray"/>
                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                <Setter Property="Padding" Value="5"/>
            </Style>

            <Style x:Key="ColumnHeaderStyle2" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}" TargetType="{x:Type DataGridColumnHeader}">
                <Setter Property="Background" Value="#FFE8E8E8" />
                <Setter Property="BorderBrush" Value="LightGray"/>
                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                <Setter Property="Padding" Value="5"/>
            </Style>

        

        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock Text="Showing results for:" FontSize="14" Margin="10,0,5,0"/>
            <TextBlock Text="{Binding SearchCriteria.SearchType}" FontSize="14" FontWeight="DemiBold"/>
            <TextBlock Text="with Width =" FontSize="14" Margin="5,0"/>
            <TextBlock Text="{Binding SearchCriteria.Width}" FontSize="14" FontWeight="DemiBold"/>
            <TextBlock Text="and Thickness =" FontSize="14" Margin="5,0"/>
            <TextBlock Text="{Binding SearchCriteria.Thickness}" FontSize="14" FontWeight="DemiBold"/>
            <TextBlock Text="of Type" FontSize="14" Margin="5,0"/>
            <TextBlock Text="{Binding SearchCriteria.RollType}" FontSize="14" FontWeight="DemiBold"/>
        </StackPanel>

        <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="0,1,0,0">
            <DataGrid  Background="White" Margin="0" RowBackground="#FFF7F7F7" AlternatingRowBackground="LightGray" SelectionMode="Single" IsReadOnly="True" AutoGenerateColumns="False" HeadersVisibility="Column"
                  ItemsSource="{Binding Summaries}" SelectedItem="{Binding SelectedSummary}" BorderThickness="0" GridLinesVisibility="None"
                  CellStyle="{StaticResource DataGridCellStyle}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Roll count" Binding="{Binding RollCount}" Width="70" 
                                    HeaderStyle="{StaticResource ColumnHeaderStyle1}"/>
                    <DataGridTextColumn Header="Width" Binding="{Binding Width}" Width="70" 
                                    HeaderStyle="{StaticResource ColumnHeaderStyle2}"/>
                    <DataGridTextColumn Header="Thickness" Binding="{Binding Thickness}" Width="70" 
                                    HeaderStyle="{StaticResource ColumnHeaderStyle1}"/>

                    <DataGridTextColumn Header="Total length" Binding="{Binding TotalLength}" Width="80" 
                                    HeaderStyle="{StaticResource ColumnHeaderStyle2}"/>
                    <DataGridTextColumn Header="Total weight" Binding="{Binding TotalWeight}" Width="80" 
                                    HeaderStyle="{StaticResource ColumnHeaderStyle1}"/>
                    <DataGridTextColumn Header="First created" Binding="{Binding FirstDateCreated, StringFormat=\{0:dd.MM.yyyy\}}" 
                                    HeaderStyle="{StaticResource ColumnHeaderStyle2}" Width="*" />
                    <DataGridTextColumn Header="Last crated" Binding="{Binding LastDateCreated, StringFormat=\{0:dd.MM.yyyy\}}" 
                                    HeaderStyle="{StaticResource ColumnHeaderStyle1}" Width="*" />
                </DataGrid.Columns>
                <DataGrid.InputBindings>
                    <MouseBinding Gesture="LeftDoubleClick" Command="{Binding ShowDetailsCommand}"/>
                </DataGrid.InputBindings>
            </DataGrid>
        </Border>
        

        <Grid Grid.RowSpan="2">
            <Grid.Style>
                <Style TargetType="{x:Type Grid}">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding DetailsVisible, Converter={StaticResource BoolToVisibilityConverter}}" Value="Visible">
                            <DataTrigger.EnterActions>
                                <BeginStoryboard Storyboard="{StaticResource FadeIn}"/>
                            </DataTrigger.EnterActions>
                            <DataTrigger.ExitActions>
                                <BeginStoryboard Storyboard="{StaticResource FadeOut}"/>
                            </DataTrigger.ExitActions>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <Border HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="{StaticResource AccentBrush}" Opacity=".7" MouseDown="Border_MouseDown"/>
            <Border HorizontalAlignment="Stretch" VerticalAlignment="top" Background="White" Margin="20" BorderBrush="{StaticResource HighlightBrush}" BorderThickness="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <DockPanel>
                        <TextBlock Text="Details for Width = " FontWeight="DemiBold" VerticalAlignment="Center" Margin="10,0,5,0"/>
                        <TextBlock Text="{Binding SelectedSummary.Width}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Text="Thickness = " FontWeight="DemiBold" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding SelectedSummary.Thickness}" VerticalAlignment="Center" Margin="0,0,5,0"/>

                        <!--<Button Grid.Row="2" Command="{Binding HideDetailsCommand}" Width="35" Height="27" HorizontalAlignment="Right" VerticalAlignment="Top" Foreground="White" FontWeight="DemiBold" Style="{StaticResource NormalButtonMouseOverSyle}">
                            <Image Source="/InventoryManagerApp;component/Assets/close.png" Margin="8" RenderOptions.BitmapScalingMode="HighQuality"/>
                        </Button>-->
                    </DockPanel>
                    <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="0,1,0,1">
                        <DataGrid  ItemsSource="{Binding Rolls}" RowBackground="#FFF7F7F7" AlternatingRowBackground="LightGray" SelectionMode="Single" IsReadOnly="True" HeadersVisibility="Column"
                              CellStyle="{StaticResource DataGridCellStyle}" AutoGenerateColumns="False"  BorderThickness="0" GridLinesVisibility="None">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="70" 
                                                HeaderStyle="{StaticResource ColumnHeaderStyle1}"/>
                                <DataGridTextColumn Header="Length" Binding="{Binding Length}" Width="60"
                                                HeaderStyle="{StaticResource ColumnHeaderStyle2}"/>
                                <DataGridTextColumn Header="Weight" Binding="{Binding Weight}" Width="60" 
                                                HeaderStyle="{StaticResource ColumnHeaderStyle1}"/>
                                <DataGridTextColumn Header="Produced by" Binding="{Binding ProducedBy}" Width="100" 
                                                HeaderStyle="{StaticResource ColumnHeaderStyle2}"/>
                                <DataGridTextColumn Header="Created on" Binding="{Binding CreatedOn, StringFormat=\{0:dd.MM.yyyy\}}" Width="90" 
                                                HeaderStyle="{StaticResource ColumnHeaderStyle1}"/>
                                <!--<DataGridTextColumn Header="Consumed on" Binding="{Binding ConsumedOn}" Width="*" 
                                                HeaderStyle="{StaticResource ColumnHeaderStyle1}"
                                                Visibility="{Binding SearchCriteria.SearchType, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Consumption}"/>-->
                                <DataGridTextColumn Header="Comment" Binding="{Binding Comment}" Width="*" 
                                                HeaderStyle="{StaticResource ColumnHeaderStyle2}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>                    
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
